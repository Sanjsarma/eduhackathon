<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script> 
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
      <%- include('partials/head.ejs')%>
      <script src="assets/js/jquery.min.js"></script>
        <script src="assets/bootstrap/js/bootstrap.min.js"></script>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Users List</h2>
                
            </div>
        </div>
    </div>
  </div>
  <!-- End All Title Box -->
  
  
<div class="container-fluid"   >
    <div class="table-data" style="padding: 50px 300px 50px 300px;" align="center" >
        <font size="3" face="times new roman"  style=" font-weight: lighter;"  >
        <h2 style="font-weight: bold;">Students</h2>
        
            <table class="table table-dark" border="1" >
                <thead>
                <tr>
                    <th>KTU ID</th>
                    <th>Name</th>
                    <th>Branch</th>
                    <th>Semester</th>
                    <th>College</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

           
                
                <%
                if(userdata.length!=0){
                var i=1;
                userdata.forEach(function(data){ 
                    if(data.role=="student"){%>
                <tr>
                    <td><%=data.ktuid%></td>
                    <td><%=data.name %></td>
                    <td><%=data.branchid %></td>
                    <td><%=data.sem %></td>
                    <td ><%=data.college %></td>
                    <td ><%=data.role %></td>
                </tr>
                <%  i++; } }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
            </tbody>
            </table>
        
            </div>
        </div>
        <div class="container-fluid"   >
            <div class="table-data" style="padding: 50px 300px 50px 300px;" align="center" >
                <font size="3" face="times new roman"  style=" font-weight: lighter;"  >
                <h2 style="font-weight: bold;">Teachers</h2>
                
                    <table class="table table-dark" border="1" >
                        <thead>
                        <tr>
                            <th>KTU ID</th>
                            <th>Name</th>
                            <th>Branch</th>
                            <th>College</th>
                            <th>Role</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
        
                   
                        
                        <%
                        if(userdata.length!=0){
                        var i=1;
                        userdata.forEach(function(data){ 
                            if(data.role=="teacher"){%>
                        <tr>
                            <td><%=data.ktuid%></td>
                            <td><%=data.name %></td>
                            <td><%=data.branchid %></td>
                            <td ><%=data.college %></td>
                            <td ><%=data.role %></td>
                        </tr>
                        <%  i++; } }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>
                        <% } %>
                    </tbody>
                    </table>
                
                    </div>
                </div>
    </body>
  </html>  